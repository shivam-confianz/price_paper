<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sale_order_form_inherit_deviated_cost" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="vendor_id" invisible="1"/>
                    <field name="rebate_contract_id" invisible="1"/>
                    <field name="product_cost" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/group[1]/group[1]/field[@name='price_unit']"
                       position="before">
                    <field name="vendor_id" invisible="1"/>
                    <field name="rebate_contract_id" invisible="1"/>
                    <field name="product_cost" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
